<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ttd_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="category" />

    <TextView
        android:id="@+id/ttd_temple_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ttd_cat"
        android:text="temple name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ttd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ttd_temple_name"
        android:text="name" />

    <TextView
        android:id="@+id/ttd_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ttd_name"
        android:layout_alignBottom="@+id/ttd_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="designation" />

    <TextView
        android:id="@+id/ttd_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ttd_name"
        android:text="phone" />

    <TextView
        android:id="@+id/ttd_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ttd_phone"
        android:layout_alignBottom="@+id/ttd_phone"
        android:layout_alignLeft="@+id/ttd_designation"
        android:text="email" />

</RelativeLayout>